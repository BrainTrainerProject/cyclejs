    }

  }

  @media screen and (max-width: $tabletBreakpoint) {
    .menu-icon {
      display block;
    }
  }

  @media screen and (min-width: $largeMonitorBreakpoint) {
    .menu-icon {
      display none;
    }
  }

  #masthead-right {

  }

  #masthead-left {

  }

  .menu.no-space-right > .item,
  .menu .avatar {
    margin-right 0
    padding-right 0
  }

  &.ui.container {
    width: auto !important;
  }

}

#content {
  padding-top $spaceBetween* 0.5
}

#content-left {
//padding-top $spaceBetween*0.5
}

